# =================================
# Docker Heatmap Server Config (TEMPLATE)
# =================================

# Environment
ENVIRONMENT=production

# Database (VPS Settings)
DB_USER=aspiredev
DB_PASSWORD=your_db_password
DB_NAME=docker_heatmap
DB_HOST=postgres
DATABASE_URL=postgres://aspiredev:your_db_password@postgres:5432/docker_heatmap?sslmode=disable

# GitHub OAuth
# Create OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=https://api.dockerheatmap.dev/api/auth/github/callback

# JWT Secret (generate a secure random string)
JWT_SECRET=your_secure_jwt_secret

# Encryption Key (MUST be exactly 32 characters for AES-256)
ENCRYPTION_KEY=your_32_char_encryption_key

# Frontend URL
FRONTEND_URL=https://dockerheatmap.dev

# Docker Hub API
DOCKER_HUB_API_URL=https://hub.docker.com/v2
